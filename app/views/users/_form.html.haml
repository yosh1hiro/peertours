= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password_digest
    = f.text_field :password_digest
  .field
    = f.label :phone_number
    = f.text_field :phone_number
  .field
    = f.label :sex
    = f.text_field :sex
  .field
    = f.label :birthdate_1
    = f.number_field :birthdate_1
  .field
    = f.label :birthdate_2
    = f.number_field :birthdate_2
  .field
    = f.label :birthdate_3
    = f.number_field :birthdate_3
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :remember_token
    = f.text_field :remember_token
  .field
    = f.label :photo_url
    = f.text_field :photo_url
  .actions
    = f.submit 'Save'
