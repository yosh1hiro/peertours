= form_for @message do |f|
  - if @message.errors.any?
    #error_explanation
      %h2= "#{pluralize(@message.errors.count, "error")} prohibited this message from being saved:"
      %ul
        - @message.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :sender_id
    = f.number_field :sender_id
  .field
    = f.label :recipient_id
    = f.number_field :recipient_id
  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :read
    = f.check_box :read
  .field
    = f.label :message_thread_id
    = f.number_field :message_thread_id
  .actions
    = f.submit 'Save'
