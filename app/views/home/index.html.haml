= render 'shared/header'
%section.main-hero
  .top-image.text-center
    .contents
      %h1
        Travel Japan with Local Insiders
      %h4.sub-title.row-space-6.row-space-3
        Find an Unforgettable Experience in Japan
      .search-panel
        .container-fluid
          %form.col-md-12.search-form{action: "/", method: "get"}
            .col-md-7.col-lg-7.form-group
              %span.form-element
                %select{name: "category", type: "select", placeholder: "Categoies"}
                  %option Categories
                  %option Tradition
                  %option Sight Seeing
                %select{name: "area", type: "select", placeholder: "Areas"}


      %form.search-tours{action: "/", method: "get"}
        %input{name: "category", size: "20"}
        %input{name: "area", size: "16"}
        %select{name: "num"}
        %input.submit{type: "submit", value: "Search"}
.container-fluid
  .row
    .row
      .col-md-4.col-md-offset-4.section-title
        %h2
          Categories
    .row
      .col-md-4.image-frame
        =link_to image_tag("category-image001.png", class: "section-image"), root_path
      .col-md-4.image-frame
        .row
          .col-md-12.image-frame
            =link_to image_tag("gourmet.png", class: "section-image"), root_path
        .row
          .col-md-12.image-frame
            =link_to image_tag("anime.png", class: "section-image"), root_path
      .col-md-4.image-frame
        .row
          .col-md-12.image-frame
            =link_to image_tag("tradition.png", class: "section-image"), root_path
        .row
          .col-md-12.image-frame
            =link_to image_tag("idol.png", class: "section-image"), root_path
  .row
    .row
      .col-md-4.col-md-offset-4.section-title
        %h2
          Areas
    .row
  .row
    .row
      .col-md-4.col-md-offset-4.section-title
        %h2
          Popular Experiences
    .row
= render 'shared/footer'