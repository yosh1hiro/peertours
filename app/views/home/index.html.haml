= render 'shared/header'
.top-image.text-center
  .contents
    %h1.title
      Omotenashi Experience in Japan
    =link_to "How to use", root_path, class: "button white"
    %form.search-tours{action: "/", method: "get"}
      %input{name: "category", size: "20"}
      %input{name: "area", size: "16"}
      %select{name: "num"}
      %input.submit{type: "submit", value: "Search"}
.container-fluid
  .row
    .row
      .col-md-4.col-md-offset-4.section-title
        %h2
          Category
    .row
      .col-md-4.image-frame
        =link_to image_tag("category-image001.png", class: "section-image"), root_path,class: "link-transparent"
      .col-md-4.image-frame
        .row
          .col-md-12.image-frame
            =link_to image_tag("gourmet.png", class: "section-image"), root_path,class: "link-transparent"
        .row
          .col-md-12.image-frame
            =link_to image_tag("anime.png", class: "section-image"), root_path,class: "link-transparent"
      .col-md-4.image-frame
        .row
          .col-md-12.image-frame
            =link_to image_tag("tradition.png", class: "section-image"), root_path,class: "link-transparent"
        .row
          .col-md-12.image-frame
            =link_to image_tag("idol.png", class: "section-image"), root_path,class: "link-transparent"
  .row
    .row
      .col-md-4.col-md-offset-4.section-title
        %h2
          Area
    .row
      .col-md-4.image-frame
        .row
          .col-md-12.image-frame
            =link_to image_tag("asakusa.png", class: "section-image"), root_path,class: "link-transparent"
        .row
          .col-md-12.image-frame
            =link_to image_tag("hokkaidou.png", class: "section-image"), root_path,class: "link-transparent"
      .col-md-4.image-frame
        .row
          .col-md-12.image-frame
            =link_to image_tag("akihabara.png", class: "section-image"), root_path,class: "link-transparent"
        .row
          .col-md-12.image-frame
            =link_to image_tag("osaka.png", class: "section-image"), root_path,class: "link-transparent"
      .col-md-4.image-frame
        =link_to image_tag("kyoto.png", class: "section-image"), root_path,class: "link-transparent"
  .row
    .row
      .col-md-4.col-md-offset-4.section-title
        %h2
          New Experience
    .row
= render 'shared/footer'
