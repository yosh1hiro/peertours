= render 'shared/header'
%section.main-hero
  .top-image.text-center
    .contents
      %h1
        Travel Japan with Local Insiders
      %h4.sub-title.row-space-6.row-space-3
        Find an Unforgettable Experience in Japan
      =link_to "How to use", root_path, class: "button white "
      %form.search-tours{action: "/", method: "get"}
        %input{name: "category", size: "20"}
        %input{name: "area", size: "16"}
        %select{name: "num"}
        %input.submit{type: "submit", value: "Search"}
