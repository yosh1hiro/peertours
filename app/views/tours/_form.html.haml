= form_for @tour do |f|
  - if @tour.errors.any?
    #error_explanation
      %h2= "#{pluralize(@tour.errors.count, "error")} prohibited this tour from being saved:"
      %ul
        - @tour.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :host_id
    = f.number_field :host_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :outline
    = f.text_area :outline
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :minimum_number
    = f.number_field :minimum_number
  .field
    = f.label :maximum_number
    = f.number_field :maximum_number
  .field
    = f.label :rendezvous
    = f.text_field :rendezvous
  .actions
    = f.submit 'Save'
